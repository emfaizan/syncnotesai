# ===================================
# SyncNotesAI Environment Configuration
# ===================================

# Application
NODE_ENV=development
APP_NAME=SyncNotesAI
APP_URL=http://localhost:3000
API_URL=http://localhost:5000

# Server Configuration
BACKEND_PORT=5000
FRONTEND_PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/syncnotesai
DB_HOST=localhost
DB_PORT=5432
DB_NAME=syncnotesai
DB_USER=user
DB_PASSWORD=password
DB_SSL=false

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Recall.ai API
RECALL_API_KEY=your-recall-api-key
RECALL_API_URL=https://api.recall.ai/api/v1
RECALL_WEBHOOK_SECRET=your-recall-webhook-secret

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ClickUp API
CLICKUP_API_KEY=your-clickup-api-key
CLICKUP_API_URL=https://api.clickup.com/api/v2
CLICKUP_TEAM_ID=your-clickup-team-id

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@syncnotesai.com

# AWS S3 (Optional - for recording storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=syncnotesai-recordings

# Redis (Optional - for caching and queues)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Webhooks
WEBHOOK_BASE_URL=http://localhost:5000/api/webhooks

# Feature Flags
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_TASK_SYNC=true

# Pricing & Usage
PRICE_PER_MINUTE=0.05
FREE_TIER_MINUTES=60
