# Backend Environment Configuration

# Server
NODE_ENV=development
BACKEND_PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/syncnotesai

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Recall.ai API
RECALL_API_KEY=your-recall-api-key
RECALL_API_URL=https://api.recall.ai/api/v1
RECALL_WEBHOOK_SECRET=your-recall-webhook-secret

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ClickUp OAuth
CLICKUP_CLIENT_ID=your-clickup-client-id
CLICKUP_CLIENT_SECRET=your-clickup-client-secret
CLICKUP_REDIRECT_URI=http://localhost:5000/api/clickup/callback
CLICKUP_API_URL=https://api.clickup.com/api/v2

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_PRO=price_pro_monthly
STRIPE_PRICE_TEAM=price_team_monthly

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Pricing (Pay-as-you-go)
PAYG_RATE_PER_HOUR=5.00
PRICE_PER_MINUTE=0.0833
FREE_TIER_MINUTES=120
